<div class="container">
  <div class="row">
    <section class="col-xs-9">
      <% if @posts.count == 0 %>
        <h2>まだ記事はありません。</h2>
      <% else %>
        <h2>記事管理</h2>
    <!-- 自身の記事一覧 -->
        <%= render 'posts/list', posts: @posts %>
      <% end %>
    </section>
    <!-- サイドバー ユーザー編集 -->
    <section class="col-xs-3 text-center sidebar">
      <%= form_for(@user) do |f| %>
        <div class="row">
          <div class="col-xs-9 col-xs-offset-1">
            <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: 'no_image.jpg' %>
          </div>
        </div>
        <br>
        <p>プロフィール画像</p>
        <%= f.attachment_field :profile_image %>
        <br>
        <P>マイページヘッダー画像</P>
        <%= f.attachment_field :profile_headerimage %>
        <br>
        <p>ユーザーネーム</p>
        <%= f.text_field :name, autofocus: true, class: '' %><br>
        <br>
        <p>紹介文</p>
        <%= f.text_area :introduction, size: '30x10', placeholder: "自己紹介欄 150文字まで" %>
        <br>
        <p>メール</p>
        <%= f.text_field :email %>
        <br>
        <br>
        <%= f.submit "更新する", class: 'btn btn-default' %>
      <% end %>
      <div class="delete_user">
        <%= link_to "退会はこちら", delete_user_path(@user) %>
      </div>
    </section>
  </div>
</div>