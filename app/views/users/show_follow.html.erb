<div class="container">
  <section class="row">
    <h3 class="follow_title"><%= @user.name %>さんのフォロー</h3>
      <table class="table follow_lists">
        <% @users.each do |user| %>
          <tr>
            <td class="follow_user_image">
              <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: '/images/no_image.jpg' %>
            </td>
            <td class="follow_user_name">
              <%= link_to user_path(user.id), :style=> 'text-decoration: none;' do %>
                <p style="color: black;"><%= user.name %></p>
              <% end %>
            </td>
            <td class="follow_user_introduction">
              <%= user.introduction %>
            </td>
          </tr>
        <% end %>
      </table>
    <%= paginate @users %>
  </section>
</div>