<div class="container">
	<div class="row">
		<article class="">
			<h3><%= @user.name %>さんのフォロワー</h3>
			<table class="">
				<tr>
					<th></th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
				<% @users.each do |user| %>
				<tr>
					<td>
						<%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: 'no_image.jpg', size: '60x60', class: 'img-circle pull-left profile-img' %>
					</td>
					<td>
						<%= user.name %>
						<%= user.introduction %>
					</td>
					<td><%= link_to "フォローする" %></td>
				</tr>
				<% end %>
			</table>
			<%= paginate @users %>
		</article>
	</div>
</div>