<div class="container">
	<div class="row">
		<section>
			<h3><%= @user.name %>さんのフォロワー</h3>
			<table class="table">
				<% @users.each do |user| %>
				<tr>
					<td>
						<%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: 'no_image.jpg', size: '45x45', class: 'img-circle pull-left profile-img' %>
					</td>
					<td>
						<%= link_to user_path(user.id), class: '' do %>
							<%= user.name %>
						<% end %>
					</td>
					<td><%= user.introduction %></td>
				</tr>
				<% end %>
			</table>
			<%= paginate @users %>
		</section>
	</div>
</div>