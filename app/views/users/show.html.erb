<div class="container">
	<div class="row">
<%#= link_to "タイムライン", timeline_path %>
<!-- サイドプロフィールバー -->
		<section class="col-xs-2">
			<div class="row">
				<div class="col-xs-12">
					<%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: 'no_image.jpg', size: '120x120', class: 'img-circle pull-left profile-img' %>
				</div>
				<div class="">
					<p><%= @user.name %></p>
					<p><%= @user.introduction%></p>
				</div>
				<div class="">
					<%= link_to "フォロー #{@user.following.count}", following_user_path(@user) %>
					<%= link_to "フォロワー #{@user.followers.count}", followers_user_path(@user) %>
					<%= render 'users/form', user: @user %>
				</div>
			<!-- 円グラフ -->
				<div class="text-left">
					<%= pie_chart @genres_data.group(:genre_name).count, height: '150px' %>
				</div>
				<div class="">
					<%= pie_chart @emotions_data.group(:emotion_name).count, height: '150px' %>
				</div>
			</div>
		</section>
	</div>
</div>
