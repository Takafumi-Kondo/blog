<div class="container-fluid">
	<div class="row">
		<section class="col-xs-8 col-xs-offset-1">
			<h2 class="panel text-center">新着記事</h2>
			<div class="row row-eq-height">
				<% @new_posts.each do |post| %>
					<div class="col-xs-6 post_contents">
						<%= attachment_image_tag post, :post_headerimage, format: 'jpeg', fallback: 'no_image.jpg', class: 'post_headerimage' %>
						<h4><%= post.title %></h4>
						<p class="text-right posted_date_list">
							投稿日:<%= post.created_at.strftime("%Y-%m-%d") %><br>
							最終更新日:<%= post.updated_at.strftime("%Y-%m-%d") %>
						</p>
						<div class="text-center">
							<%= link_to "続きを読む", post_path(post.id), :style=> 'text-decoration: none;' %>
						</div>
					</div>
				<% end %>
			</div>
		</section>
	<!-- サイドバー -->
		<section class="col-xs-2 text-center">
			<%= render 'users/side', user: @user %>
		<!-- 円グラフ -->
			<%= pie_chart @genres_data.group(:genre_name).count %>
			<%= pie_chart @emotions_data.group(:emotion_name).count %>
		</section>
	</div>
</div>
<div class="">
	<p>日間PV数</p>
	<%= line_chart @post_counts %>
</div>