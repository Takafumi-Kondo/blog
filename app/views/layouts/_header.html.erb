<header>
    <div class="top_image">
       <%#= link_to image_tag('トップに使用する画像', { :border => '0', :alt => 'トップページ', :size => '100x100'}), root_path %>
    </div>

    <nav class="navbar navbar-default">
        <div class="container">
            <div class="row">
                <!-- 検索フォーム -->
                <div class="col-xs-5"><br>
                    <%= form_tag root_path, :method => 'get' do %>
                        <%= text_field_tag :search %>
                        <%= submit_tag "検索", :name => nil %>
                    <% end %>
                </div>

                <div class="col-xs-5">
                    <div class="collapse navbar-collapse" id="navbarEexample1">
                        <ul class="nav navbar-nav">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">管理 <span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><%= link_to "ユーザー管理", users_path %></li>
                                    <li><%= link_to "問い合わせ管理", contacts_path %></li>
                                    <li><%= link_to "記事管理", posts_admin_path %></li>
                                    <li><%= link_to "ジャンル管理", genres_path %></li>
                                    <li><%= link_to "気分管理", emotions_path %></li>
                                </ul>
                            </li>
                            <li>
                                <%= link_to "このサイトについて", about_path %>
                            </li>
                            <li>
                                <%= link_to "マイページ", user_path(current_user) %>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="col-xs-2">
                    <li class="header_link">
                        <% if user_signed_in? %>
                            <%= link_to current_user.name, user_path(current_user) %>
                        <% else %>
                            <%= link_to "ゲスト", new_user_session_path %>
                        <% end %>
                    </li>
                    <li class="header_link">
                        <%= link_to "新規登録", new_user_registration_path%>/
                        <%= link_to "ログイン", new_user_session_path %>
                    </li>
                    <% if user_signed_in? %>
                        <li class="header_link">
                            <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
                        </li>
                    <% end %>
                </div>
            </div>
        </div>
    </nav>
</header>