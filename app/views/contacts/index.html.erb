<div class="container">
  <div class="row">
    <section>
      <h2 class="contact_title_list">問い合わせ一覧</h2>
        <table class="table table-striped table-hover contacts">
          <thead>
            <tr class="contact">
              <th class="col-xs-1">日時</th>
              <th width="5%">ID</th>
              <th class="col-xs-1">ユーザー名</th>
              <th class="col-xs-1">件名</th>
              <th class="col-xs-2">内容</th>
              <th width="5%"></th>
              <th class="col-xs-1"></th>
              <th class="col-xs-1"></th>
            </tr>
          </thead>
          <tbody>
            <% @contacts.each do |contact| %>
              <tr class="contact">
                <td><%= contact.created_at.strftime("%Y-%m-%d %H:%M") %></td>
                <td><%= contact.user.id %></td>
                <td><%= contact.user.name %></td>
                <td><%= contact.title %></td>
                <td><%= contact.contact_content.truncate(200) %></td>
                <!-- 返信確認チェックマーク -->
                <td>
                  <% if contact.responce == nil %>
                    <i class="fas fa-info-circle my-orange"></i>
                  <% else %>
                    <i class="fas fa-check my-green"></i>
                  <% end %>
                </td>
                <td class="text-center">
                  <%= link_to "詳細", contact_path(contact.id), class: 'btn btn-link' %>
                </td>
                <td class="text-center">
                  <%= link_to "削除", contact_path(contact.id), method: :delete, "data-confirm" => "削除しますか？", class: 'btn btn-link' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <%= paginate @contacts %>
    </section>
  </div>
</div>