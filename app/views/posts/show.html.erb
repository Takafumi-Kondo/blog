<section class="">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xs-8 col-xs-offset-1 post_show">
				<div class="row">
					<div class="col-xs-10 col-xs-offset-1">
						<h2><%= @post.title %></h2>
						<p class="posted_date">投稿日:<%= @post.created_at.strftime("%Y-%m-%d %H:%M") %></p>
						<div class="post-image">
							<%= attachment_image_tag @post, :post_headerimage, format: 'jpeg', fallback: 'no_image.jpg', class: 'post_headerimage' %>
						</div>
					</div>
				</div>
				<p><%= markdown(@post.body).html_safe %></p>
				<br>
		<!-- いいね欄 favorited_by?はmodelに定義したやつ-->
				<% if @post.favorited_by?(current_user) %>
					<%= link_to post_favorites_path(@post), :style=> 'text-decoration: none;', method: :delete do %>
						<i class="fa fa-heart" style="color: red;"></i>
					<% end %>
					<%= @post.favorites.count %>
				<% else %>
					<%= link_to post_favorites_path(@post), :style=> 'text-decoration: none;', method: :post do %>
					<i class="far fa-heart"></i>
					<% end %>
					<%= @post.favorites.count %>
				<% end %>
		<!-- コメント欄 -->
				<%= render 'posts/comments', post: @post, comment: @comment %>
				<%= number_with_delimiter(@page_views) %>
			</div>
		<!-- サイドバー -->
			<div class="col-xs-2 text-center">
				<%= render 'users/side', user: @user %>
			</div>
		</div>
	</div>
</section>