<section class="container">
	<div class="row">
		<div class="col-xs-9">
			<div class="row">
				<div class="col-xs-10 col-xs-offset-1">
			  		<h4 class="text-center"><%= post.comments.count %>件コメント</h4>
					<ol class="col-xs-9">
						<% post.comments.each do |comment| %>
							<li class="comment">
								<div class="avatar">
									<%= attachment_image_tag comment.user, :profile_image, size: '35x35', fallback: "no_image.jpg" %>
									<%= link_to user_path(comment.user.id) do %>
										<%= comment.user.name %>&nbsp;
									<% end %>
									<%= comment.created_at.strftime('%Y/%m/%d') %>
								</div>
								<div class="comment-entry"><%= comment.comment %></div>
							</li>
						<% end %>
					</ol>
				<!-- コメント送信フォーム -->
					<%= form_for [post, comment] do |f| %>
						<%= f.text_area :comment, rows:'3', placeholder: "コメント", class: 'form-control' %>
						<%= f.submit "コメントを送信", class: 'btn btn-default' %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</section>
<%#= render 'posts/comment', post: @post, comment: @comment %>