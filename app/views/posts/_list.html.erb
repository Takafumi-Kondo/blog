<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th width="1%">ID</th>
      <th width="20%">タイトル</th>
      <th>本文</th>
      <th width="8%"></th>
      <th width="8%"></th>
      <th width="8%"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title.truncate(20) %></td>
        <td><%= post.body.truncate(50) %></td>
        <td><%= link_to "詳細", post_path(post.id) %></td>
        <td><%= link_to "編集", edit_post_path(post.id) %></td>
        <td><%= link_to "削除", post_path(post.id), method: :delete, "data-confirm" => "削除しますか？" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate posts %>
