<table class="table">
	<thead>
		<tr class="info">
			<th>ID</th>
			<th>タイトル</th>
			<th>本文</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
	<% posts.each do |post| %>
		<tr class="active">
			<td><%= post.id %></td>
			<td><%= post.title %></td>
			<td><%= post.body.truncate(50) %></td>
			<td><%= link_to "詳細", post_path(post.id) %></td>
			<td><%= link_to "削除", post_path(post.id), method: :delete, "data-confirm" => "削除しますか？", class: 'btn-sm' %></td>
		</tr>
	<% end %>
	</tbody>
</table>
<%= paginate posts %>
<%#= render 'posts/list', posts: @posts %>