<!-- フォローしているユーザーの投稿 -->
<div class="container-fluid">
	<div class="row">
		<section class="col-xs-8 col-xs-offset-1">
			<div class="jscroll">
				<% @timeline.each do |post| %>
					<div class="row">
						<div class="col-xs-1 timeline_image">
							<%= attachment_image_tag post.user, :profile_image, format: 'jpeg', size: '60x60', fallback: 'no_image.jpg' %>
						</div>
						<div class="col-xs-10">
							<%= link_to post_path(post.id) do %>
								<h4><%= post.title %></h4>
							<% end %>
							<%= post.body.truncate(100) %><br>
							<%= post.genre.genre_name %>
							<%= link_to user_path(post.user.id) do %>
								<div class="text-right"><%= post.user.name %></div>
							<% end %>
							<p class="posted_date text-right"><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></p>
						</div>
					</div>
				<% end %>
				<%= paginate @timeline %>
			</div>
		</section>
		<aside class="col-xs-2 text-center">
			<%= render 'users/side', user: @user %>
		</aside>
	</div>
	<div class="toppage">
		<i class="fas fa-arrow-circle-up fa-3x"></i>
	</div>
</div>