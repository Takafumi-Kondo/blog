<!-- おすすめ記事 -->
	<div class="row">
		<section class="col-xs-7 popular_posts">
			<h3 class="panel panel-default section_title">おすすめ記事</h3>
			<div class="row row-eq-height">
				<% @popular_posts.each do |post| %>
					<div class="col-xs-6 popular_contents">
						<div class="row">
							<div class="col-xs-6">
								<%= attachment_image_tag post, :post_headerimage, format: 'jpeg', fallback: 'no_image.jpg', class: 'post_headerimage' %>
							</div>
							<%= link_to post_path(post.id), :style=> 'text-decoration: none;' do %>
								<h4><%= post.title.truncate(20) %></h4>
							<% end %>
							<%= link_to user_path(post.user.id), :style=> 'text-decoration: none;' do %>
								<p class="text-right"><%= post.user.name %></p>
							<% end %>
						</div>
					</div>
				<% end %>
			</div>
		</section>
	<!-- おすすめユーザー -->
		<section class=" col-xs-4 col-xs-offset-1 popular_users">
			<h3 class="panel panel-default section_title">おすすめのユーザー</h3>
			<% @popular_users.each do |user| %>
				<div class="row user_contents">
					<div class="col-xs-4 col-xs-offset-1">
						<%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: 'no_image.jpg', size: '60x90', class: 'profile_image' %>
					</div>
					<%= link_to user_path(user.id), :style=> 'text-decoration: none;' do %>
						<p><%= user.name %></p>
						<p><%= user.introduction.truncate(25) %></p>
					<% end %>
				</div>
			<% end %>
		</section>
	</div>
<!-- 新着記事 -->
	<div class="row">
		<section class="new-posts">
			<h3 class="panel panel-default section_title">新着記事</h3>
			<div class="row row-eq-height">
				<% @posts.each do |post| %>
					<div class="col-xs-4 new_contents">
						<div class="row">
							<div class="col-xs-6 new_content_image">
								<%= attachment_image_tag post, :post_headerimage, format: 'jpeg', fallback: 'no_image.jpg', class: 'post_headerimage' %>
							</div>
							<%= link_to post_path(post.id), :style=> 'text-decoration: none;' do %>
