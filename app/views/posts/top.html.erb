<div class="container-fluid top">
	<div class="top_contents">
		<% @posts_pv_count.each do |post| %>
			<div class="item">
				<%= attachment_image_tag post, :post_headerimage, format: 'jpeg', fallback: 'no_image.jpg' %>
				<%= link_to post_path(post.id), :style=> 'text-decoration: none;' do %>
					<h4><%= post.title.truncate(40) %></h4>
				<% end %>
				<p><%= post.genre.genre_name %></p>
				<%= link_to user_path(post.user.id), :style=> 'text-decoration: none;' do %>
					<p class="text-right"><%= post.user.name %></p>
				<% end %>
			</div>
		<% end %>
	</div>
</div>
