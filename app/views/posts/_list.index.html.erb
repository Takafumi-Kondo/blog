<div class="container">
	<div class="row">
		<div class="">
		<% posts.each do |post| %>
			<table class="">
				<thead>
					<tr class="info">
						<th>ID</th>
						<th>ユーザーID</th>
						<th>ユーザー名</th>
						<th>タイトル</th>
						<th>本文</th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<tr class="active">
						<td><%= post.id %></td>
						<td><%= post.user.id %></td>
						<td><%= post.user.name %></td>
						<td><%= post.title %></td>
						<td><%= post.body.truncate(50) %></td>
						<td><%= link_to "詳細", post_path(post.id) %></td>
						<td><%= link_to "削除", post_path(post.id), method: :delete, "data-confirm" => "削除しますか？", class: 'btn-sm' %></td>
					</tr>
				</tbody>
			</table>
		<% end %>
		<%= paginate posts %>
		</div>
	</div>
</div>
<%#= render 'posts/list', posts: @posts %>