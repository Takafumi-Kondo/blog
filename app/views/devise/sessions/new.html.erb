<article class="container">
  <div class="row">
    <section class="text-center col-xs-4 col-xs-offset-4">
      <h1 class="top_title">ログイン</h1>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.email_field :email, placeholder: "メールアドレス", required: true, autofocus: true, autocomplete: "email", class: 'form-control' %>
          <br>
          <%= f.password_field :password, placeholder: "パスワード", required: true, autocomplete: "current-password", class: 'form-control' %>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
          <%= f.submit "ログイン", class: 'btn btn-default' %>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
    </section>
  </div>
</article>