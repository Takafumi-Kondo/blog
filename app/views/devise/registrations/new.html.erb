<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="container">
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
            <%= render "devise/shared/error_messages", resource: resource %>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-7 col-xs-offset-2">
            <div class="text-center">
                <h1>新規会員登録</h1>
            </div>
            <div class="field">
            <!-- <form class="form-inline"> -->
                <%= f.label :ユーザー名 %><br />
                <%= f.text_field :name, autofocus: true,required: true, autocomplete: "name" %>
            </div>
            <div class="field">
                <%= f.label :メールアドレス %><br />
                <%= f.email_field :email, required: true, autocomplete: "email" %>
            </div>
            <div class="field">
                <%= f.label :パスワード %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, required: true, autocomplete: "new-password" %>
            </div>
            <div class="field">
                <%= f.label :パスワード確認 %><br />
                <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password" %>
            </div>

            <div class="action">
                    <%= f.submit "登録", class: '' %>
            </div>
            <%= render "devise/shared/links" %>
        </div>
    </div>
</div>
<% end %>
